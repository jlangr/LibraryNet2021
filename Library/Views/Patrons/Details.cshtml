@model LibraryNet2020.ViewModels.PatronViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patron</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
    
    <h2>Holdings</h2>
    <table>
            <tr>
            <th>@Html.DisplayNameFor(modelItem => Model.Holdings.First().Barcode)</th>
            <th>@Html.DisplayNameFor(modelItem => Model.Holdings.First().DueDate)</th>
            </tr>
        @foreach (var holding in Model.Holdings)
        {
            <tr>
            <td>@Html.DisplayFor(modelItem => holding.Barcode)</td>
            <td>@Html.DisplayFor(modelItem => holding.DueDate)</td>
            </tr>
        }
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
